<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chose">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="18dp"
        android:text="In EduFuture, here are lesson previews of the lessons between 5-10 minutes. You can start watching the preview of the Network lesson by tapping the Play button."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/video_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/video_play"
        android:layout_width="156dp"
        android:layout_height="60dp"
        android:layout_marginBottom="47dp"
        android:drawableRight="@drawable/baseline_play_circle_outline_24"
        android:text="Play"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_marginBottom="30dp"
        android:text="If you want, you can participate in a 5-question quiz about the course video you watched by tapping the Quiz button after watching the video."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/enter_quiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_play" />

    <Button
        android:id="@+id/enter_quiz"
        android:layout_width="156dp"
        android:layout_height="60dp"
        android:layout_marginBottom="75dp"
        android:drawableRight="@drawable/baseline_check_box_24"
        android:text="QuÄ±z"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/go_back"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/go_back"
        android:layout_width="128dp"
        android:layout_height="52dp"
        android:layout_marginBottom="50dp"
        android:drawableRight="@drawable/baseline_keyboard_return_24"
        android:text="Back"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_quiz" />

</androidx.constraintlayout.widget.ConstraintLayout>